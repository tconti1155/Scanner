<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/scanner_background"
    android:id="@+id/sort_items"
    android:clickable="true">

    <ImageButton
        android:background="@android:color/transparent"
        android:src="@drawable/sort_name"
        android:id="@+id/sort_by_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort by Name"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/sort_by_barcode_one"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.619"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.503" />

    <ImageButton
        android:background="@android:color/transparent"
        android:src="@drawable/sort_barcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort by Barcode"
        android:id="@+id/sort_by_barcode_one"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="107dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.503" />

    <ImageButton
        android:background="@android:color/transparent"
        android:src="@drawable/sort_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort By Location"
        android:id="@+id/sort_by_location"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="214dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toTopOf="@+id/returnMain3" />

    <ImageButton
        android:background="@android:color/transparent"
        android:src="@drawable/main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return to Main Menu"
        android:id="@+id/returnMain3"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.877"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp" />

</android.support.constraint.ConstraintLayout>